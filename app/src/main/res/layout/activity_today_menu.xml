<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cardview_light_background"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodayMenu">

    <LinearLayout
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/breakfast"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"                               
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <ImageView
                       android:src="@drawable/ic_free_breakfast_black_24dp"
                       android:padding="10dp"
                       android:background="@drawable/circlebackground"
                       android:layout_width="64dp"
                       android:layout_height="64dp">

                   </ImageView>

                   <View
                       android:layout_margin="5dp"
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:background="@color/blue"
                       android:padding="10dp"
                       />

                   <TextView
                       android:textStyle="bold"
                       android:textSize="20dp"
                       android:layout_marginTop="5dp"
                       android:text="@string/breakfast_text"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>


               </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/lunch"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"                               
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_restaurant_menu_black_24dp"
                    android:padding="10dp"
                    android:background="@drawable/circlebackground"
                    android:layout_width="64dp"
                    android:layout_height="64dp">

                </ImageView>

                <View
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blue"
                    android:padding="10dp"
                    />

                <TextView

                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/lunch_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/dinner"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_restaurant_black_24dp"
                    android:padding="10dp"
                    android:background="@drawable/circlebackground"
                    android:layout_width="64dp"
                    android:layout_height="64dp">

                </ImageView>

                <View
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blue"
                    android:padding="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/dinner_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Snacks"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_local_pizza_black_24dp"
                    android:padding="10dp"
                    android:background="@drawable/circlebackground"
                    android:layout_width="64dp"
                    android:layout_height="64dp">

                </ImageView>

                <View
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blue"
                    android:padding="10dp"
                    />

                <TextView

                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/snacks_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>


</LinearLayout>
